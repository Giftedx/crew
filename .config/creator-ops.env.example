# Creator Operations Multi-Agent System - Environment Configuration
# Copy this file to .env and configure with your actual values

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable Creator Operations system
ENABLE_CREATOR_OPS=true

# Enable real API calls (set to false for fixture mode)
ENABLE_REAL_APIS=false

# Enable specific platforms
ENABLE_YOUTUBE=true
ENABLE_TWITCH=true
ENABLE_TIKTOK=true
ENABLE_INSTAGRAM=true
ENABLE_X=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL database URL for Creator Operations
DATABASE_URL=postgresql://bandits:secure_password_change_me@localhost:5432/bandits_db

# =============================================================================
# OBJECT STORAGE (MinIO)
# =============================================================================

# MinIO endpoint for media storage
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123

# =============================================================================
# VECTOR DATABASE (Qdrant)
# =============================================================================

# Qdrant endpoint for embeddings
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# =============================================================================
# REDIS CACHE
# =============================================================================

# Redis URL for rate limiting and job queues
REDIS_URL=redis://:secure_redis_password@localhost:6380/0

# =============================================================================
# PLATFORM API CREDENTIALS
# =============================================================================

# YouTube Data API
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_youtube_oauth_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_oauth_client_secret_here

# Twitch API
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here
TWITCH_WEBHOOK_SECRET=your_twitch_webhook_secret_here

# TikTok API
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here

# Instagram Graph API
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_APP_ID=your_instagram_app_id_here
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here

# X (Twitter) API v2
X_API_KEY=your_x_api_key_here
X_API_SECRET=your_x_api_secret_here
X_ACCESS_TOKEN=your_x_access_token_here
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret_here

# =============================================================================
# LLM SERVICES
# =============================================================================

# OpenAI API (for Whisper, GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter API (for alternative LLM providers)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================

# Maximum number of worker processes
MAX_WORKERS=4

# Batch size for processing
BATCH_SIZE=10

# Processing timeout in seconds
PROCESSING_TIMEOUT_SECONDS=3600

# =============================================================================
# MACHINE LEARNING SETTINGS
# =============================================================================

# Whisper model for speech recognition
WHISPER_MODEL=large-v3

# Enable GPU acceleration
USE_GPU=true

# Embedding model for vector search
EMBEDDING_MODEL=text-embedding-3-large

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption key for secrets (generate with: python -c "from creator_ops.auth.vault import generate_encryption_key; print(generate_encryption_key())")
CREATOR_OPS_ENCRYPTION_KEY=your_encryption_key_here

# Data retention period in days
DATA_RETENTION_DAYS=90

# Enable audit logging
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# YouTube rate limits
YOUTUBE_RATE_LIMIT_PER_MINUTE=100
YOUTUBE_RATE_LIMIT_PER_HOUR=10000
YOUTUBE_RATE_LIMIT_PER_DAY=100000

# Twitch rate limits
TWITCH_RATE_LIMIT_PER_MINUTE=800
TWITCH_RATE_LIMIT_PER_HOUR=8000
TWITCH_RATE_LIMIT_PER_DAY=80000

# TikTok rate limits
TIKTOK_RATE_LIMIT_PER_MINUTE=60
TIKTOK_RATE_LIMIT_PER_HOUR=1000
TIKTOK_RATE_LIMIT_PER_DAY=10000

# Instagram rate limits
INSTAGRAM_RATE_LIMIT_PER_MINUTE=200
INSTAGRAM_RATE_LIMIT_PER_HOUR=4800
INSTAGRAM_RATE_LIMIT_PER_DAY=50000

# X rate limits (Basic tier)
X_RATE_LIMIT_PER_MINUTE=15
X_RATE_LIMIT_PER_HOUR=300
X_RATE_LIMIT_PER_DAY=30000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode
DEBUG=false

# Disable dotenv loading (for tests)
CREW_DISABLE_DOTENV=false

# Enable secure config fallback
CREW_ENABLE_SECURE_PATH_FALLBACK=false
CREW_ENABLE_SECURE_QDRANT_FALLBACK=false
