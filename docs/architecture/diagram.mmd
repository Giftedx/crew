    end
    
    %% Data Flow
    YT --> DOWNLOAD
    TT --> DOWNLOAD
    TW --> DOWNLOAD
    RD --> DOWNLOAD
    
    CLI --> CREW
    CREW --> ENHANCED
    ENHANCED --> MISSION
    
    MISSION --> ACQUISITION
    ACQUISITION --> TRANSCRIPTION
    TRANSCRIPTION --> ANALYSIS
    ANALYSIS --> MEMORY
    MEMORY --> DISCORD_AGENT
    
    DOWNLOAD --> ACQ_TOOLS
    TRANSCRIBE --> ANALYSIS_TOOLS
    ANALYZE --> ANALYSIS_TOOLS
    STORE --> MEMORY_TOOLS
    PUBLISH --> VERIFICATION_TOOLS
    
    ACQ_TOOLS --> STEPRESULT
    ANALYSIS_TOOLS --> STEPRESULT
    MEMORY_TOOLS --> STEPRESULT
    VERIFICATION_TOOLS --> STEPRESULT
    
    STEPRESULT --> METRICS
    METRICS --> LOGGING
    LOGGING --> HEALTH
    HEALTH --> ALERTS
    
    STORE --> QDRANT
    STORE --> REDIS
    STORE --> POSTGRES
    
    DISCORD_AGENT --> DISCORD
    DISCORD --> WEBHOOK
    
    %% Tenant Isolation
    QDRANT --> TENANT_A
    QDRANT --> TENANT_B
    REDIS --> WORKSPACE_A
    REDIS --> WORKSPACE_B
    
