# Production Environment Configuration

# Application Environment
ENVIRONMENT=production
LOG_LEVEL=WARNING
DEBUG=false

# Discord Bot Configuration
DISCORD_BOT_TOKEN=${DISCORD_BOT_TOKEN}
DISCORD_GUILD_ID=${DISCORD_GUILD_ID}

# API Configuration
OPENROUTER_API_KEY=${OPENROUTER_API_KEY}
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Database Configuration
POSTGRES_URL=postgresql://discord_user:${POSTGRES_PASSWORD}@postgresql:5432/discord_intelligence_production
POSTGRES_USER=discord_user
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# Vector Database Configuration
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=${QDRANT_API_KEY}

# Object Storage Configuration
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=${MINIO_ACCESS_KEY}
MINIO_SECRET_KEY=${MINIO_SECRET_KEY}

# Monitoring Configuration
GRAFANA_PASSWORD=${GRAFANA_PASSWORD}
PROMETHEUS_RETENTION=30d

# OAuth Configuration
YOUTUBE_CLIENT_ID=${YOUTUBE_CLIENT_ID}
YOUTUBE_CLIENT_SECRET=${YOUTUBE_CLIENT_SECRET}
TWITCH_CLIENT_ID=${TWITCH_CLIENT_ID}
TWITCH_CLIENT_SECRET=${TWITCH_CLIENT_SECRET}
TIKTOK_CLIENT_KEY=${TIKTOK_CLIENT_KEY}
TIKTOK_CLIENT_SECRET=${TIKTOK_CLIENT_SECRET}
INSTAGRAM_APP_ID=${INSTAGRAM_APP_ID}
INSTAGRAM_APP_SECRET=${INSTAGRAM_APP_SECRET}
X_CLIENT_ID=${X_CLIENT_ID}
X_CLIENT_SECRET=${X_CLIENT_SECRET}

# Feature Flags
ENABLE_DEBATE_ANALYSIS=true
ENABLE_FACT_CHECKING=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_MEMORY_STORAGE=true
ENABLE_MCP_TOOLS=true
ENABLE_OAUTH_INTEGRATION=true

# Performance Configuration
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=60
CACHE_TTL=7200
VECTOR_SEARCH_LIMIT=500

# Security Configuration
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
ENABLE_CORS=true
CORS_ALLOWED_ORIGINS=https://discord-intelligence.com,https://app.discord-intelligence.com

# Discord Webhook for Alerts
DISCORD_WEBHOOK_URL=${DISCORD_WEBHOOK_URL}
