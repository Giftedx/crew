{
    "makefile.configureOnOpen": false,
    "python.testing.pytestArgs": [
        "-q",
        "-c",
        "config/pytest.ini"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    // Added interpreter & Ruff integration
    "python.defaultInterpreterPath": "/home/crew/.venv/bin/python",
    "ruff.interpreter": [
        "/home/crew/.venv/bin/python"
    ],
    // Prefer Pylance for stability; switch back to "Jedi" if needed for repro
    "python.languageServer": "None",
    // Use Ruff for formatting & linting on save
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/*.bak": true,
        "**/src/core/**": true,
        "**/src/ai/**": true,
        "**/src/obs/**": true,
        "**/src/ingest/**": true,
        "**/src/analysis/**": true,
        "**/src/memory/**": true,
        "**/src/services/**": true
    },
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "ruff.format.enable": true,
    // Ruff native LSP now uses code actions; remove deprecated ruff.lint.run
    "editor.codeActionsOnSave": {
        "source.organizeImports.ruff": "explicit",
        "source.fixAll.ruff": "explicit"
    },
    // If you prefer automatic (no explicit) you can change "explicit" to true
    // Keep semantic highlighting enabled (Pylance handles it well)
    "editor.semanticHighlighting.enabled": true,
    // Moderate type checking (can elevate to "strict" later)
    "python.analysis.typeCheckingMode": "basic",
    "python-envs.pythonProjects": [],
    // Python path configuration for new 3-layer architecture
    "python.analysis.extraPaths": [
        "${workspaceFolder}/src"
    ],
    // Ignore deleted legacy directories in file search
    "files.watcherExclude": {
        "**/src/core/**": true,
        "**/src/ai/**": true,
        "**/src/obs/**": true,
        "**/src/ingest/**": true,
        "**/src/analysis/**": true,
        "**/src/memory/**": true
    },
    // Search exclude patterns for deleted directories
    "search.exclude": {
        "**/src/core/**": true,
        "**/src/ai/**": true,
        "**/src/obs/**": true,
        "**/src/ingest/**": true,
        "**/src/analysis/**": true,
        "**/src/memory/**": true
    }
}